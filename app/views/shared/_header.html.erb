<header id='header' class='header-top'>
  <div class="navbar navbar-expand-lg bg-light">
  <div class="container-fluid">
    <a class="navbar-brand fs-2" href="/">LearnLog2</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvas" aria-controls="offcanvas">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvas" aria-labelledby="offcanvasLabel">
      <div class="offcanvas-header">
        <h5 class="offcanvas-title">Menu</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body">
        <ul class="navbar-nav nav-underline fs-5">
          <li class="nav-item"><%= link_to 'Measure', new_log_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'History', logs_path, class: 'nav-link' %></li>
          <li class="nav-item dropdown">
            <%= link_to 'DailyNote', '#', class: 'nav-link dropdown-toggle', role: 'button', data: { bs_toggle: 'dropdown' }, aria_expanded: 'false' %>
            <ul class="dropdown-menu nav-underline" aria-labelledby="navbarDropdownMenu">
              <li><%= link_to 'Today', edit_daily_note_path(current_user.daily_notes.last), class: 'dropdown-item nav-item' %></li>
              <li><%= link_to 'List', daily_notes_path, class: 'dropdown-item nav-item' %></li>
            </ul>
          </li>
          <li class="nav-item"><%= link_to 'Dashboard', dashboard_path, class: 'nav-link' %></li>
        </ul>
        <div class='navbar-brand dropdown dropdown-slide ms-auto'>
          <%= link_to '#', class:"nav-link", data:{bs_toggle: "dropdown"}, aria: { haspopup: 'true', expanded: 'false' } do %>
            <%= image_tag current_user.profile.avatar_url, class:"rounded-circle mr15", width:"50", height:"50" %>
          <% end %>
          <div class='dropdown-menu dropdown-menu-end'>
            <div class='dropdown-item'><%= current_user.name %></div>
            <div class='dropdown-divider'></div>
            <%= link_to 'Profile', profile_path, class:"dropdown-item" %>
            <%= link_to 'Mantra', mantras_path, class:"dropdown-item" %>
            <%= link_to 'Logout', logout_path , class:"dropdown-item", data:{turbo_method: :delete, turbo_confirm: 'ログアウトしてよろしいですか？' } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
